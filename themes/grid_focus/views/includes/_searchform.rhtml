<%# start the form tag for (quick) search results -%>
<% form_remote_tag(:html => {:id => 'searchWrap'},
					:update => 'results',
					:complete => 'showResults(true);',
					:loading => 'showResults(false);',
					:url => "#{Site.full_url}/search") do -%>
					
	<div id="searchForm">
		<input type="text" name="q" id="q" value="Enter your terms, hit enter" onfocus="searchFocus()" />
		<input id="searchsubmit" type="image" src="<%= theme_image_path 'btn_search.gif' %>" alt="Submit" />
	</div>

  <div id="resultWrap">
		<div class="middle_links">
			<h3>Search Results</h3>
			<p>Results (escape to close):<br/><span id="loading"></span><span id="results"></span></p>
		</div>
  </div>

<% end -%>
<%# end (quick) search form tag -%>
