<!-- this is post id <%= post.id %> -->
<div id="main"></div>
<div class="post" id="post-<%= post.id %>">
	<div class="postMeta fix"><span class="date"><%= date_time(post) %></span></div>
	<h2><a href="<%= Post.permalink(post) %>" title="<%= post.title %>"><%= post.title %></a></h2>
	<div class="entry">
		<%= post.body %>
    	<%= extended_content_block(post) -%>
	</div>
  <div id="disqus_thread"></div>
  <script type="text/javascript" src="http://disqus.com/forums/larrydotorg/embed.js"></script>
  <noscript><a href="http://larrydotorg.disqus.com/?url=ref">View the discussion thread.</a></noscript>
  <a href="http://disqus.com" class="dsq-brlink">blog comments powered by <span class="logo-disqus">Disqus</span></a>	
</div>
<!-- end post id <%= post.id %> -->